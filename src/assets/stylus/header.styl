nav
	background rgba(1,88,167,0.85)
	height 192px
	.container
		height 100%
		ul
			display flex
			flex-direction row
			flex-wrap nowrap
			justify-content center
			align-items center
			height 100%
			li
				margin 0 5px
				a
					font-family 'robotoregular'
					font-size 14px
					letter-spacing -0.08em
					color white
					text-decoration none
					display block
					text-align center
					color white
					height 120px
					padding 0 20px
					position relative
					overflow hidden
					.main-icon
						position absolute
						bottom -17px
						left 50%
						transform translate(-50%,0) rotate(-180deg)
						font-size 50px
						display none
						&.active
							display block
					.icon-menu
						background-image url('../src/assets/images/mainmenu.png')
						background-position -21px -351px
						background-repeat no-repeat
						display block
						height 53px
						width 100% 
						&.home
							background-position -24px -369px
						&.business
							background-position -243px -364px
						&.depenPerson
							background-position -246px -251px
						&.indepenPerson
							background-position -6px -250px
						&.ticket
							background-position -244px -109px
						&.history
							background-position -28px 0px
						&.doctor
							background-position -25px -127px
						&.reports
							background-position -241px 4px
							
	
.headerMain
	background linear-gradient(to bottom, #f2f2f2 0%,#d8d8d8 100%)
	height 115px
	width 100%
	.container
		display flex
		flex-direction row
		flex-wrap nowrap
		justify-content space-between
		align-items flex-start
		padding-top 15px
		a
			img
				width 210px
		.boxProfile
			background white
			border-radius 50px
			overflow hidden 
			height 89px
			width 286px
			box-sizing border-box
			padding 3px 10px
			.boxPerson, figure
				display inline-block
				vertical-align bottom
				margin-left -4px
			figure
				margin 0
				width 80px
				height 80px
				border-radius 100%
				overflow hidden
				border 1px solid #cad8e3
			.boxPerson
				padding-left 5px
				padding-bottom 5px
				h2,h3,a
					font-family 'robotoregular'
					font-size 14px
					letter-spacing -0.08em
					color #0083d8
				a
					background #0283de
					color white
					display block
					line-height 1.75em
					border-radius 40px
					text-align center
					font-size 12px
					text-decoration none
					height 22px
					width 108px
					padding-top 1px
					box-sizing border-box
					margin-top 5px
					i
						font-size 14px
						position relative
						top 1px
				h3
					color #929292
